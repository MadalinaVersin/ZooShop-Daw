
@{
    ViewBag.Title = "Breeds";
}

<h2>@ViewBag.Title</h2>
<table class="table">
    <thead>
    <th>Name</th>
    <th>Update</th>
    </thead>
    <tbody>
        @foreach (var breed in ViewBag.Breeds)
        {
            <tr>
                <td>@breed.BreedName</td>
                <td>
                    @using (Html.BeginForm(actionName: "Edit", controllerName: "Breed", method: FormMethod.Get, routeValues: new { id = breed.BreedId }))
                    {
                        <button type="submit" class="btn btn-link col-lg-3">Update</button>
                    }
                    @using (Html.BeginForm(actionName: "Delete", controllerName: "Breed", method: FormMethod.Post, routeValues: new { id = breed.BreedId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button type="submit" class="btn btn-link col-lg-3">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
@Html.ActionLink("Add breed", "New")

