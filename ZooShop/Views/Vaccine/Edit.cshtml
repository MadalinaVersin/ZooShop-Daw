@model ZooShop.Models.Vaccine
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Vaccine"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(v => v.VaccineId)
    <br />
    @Html.Label("Name", "Name:")
    <br />
    @Html.EditorFor(v => v.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(v => v.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Price", "Price:")
    <br />
    @Html.EditorFor(v => v.Price, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(v => v.Price, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}