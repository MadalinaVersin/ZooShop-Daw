@model ZooShop.Models.Vaccine
@{
    ViewBag.Title = "New";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Vaccine", method: FormMethod.Post))
{
    @Html.Label("Name", "Name:")
    <br />
    @Html.TextBoxFor(v => v.Name, null, new { placeholder = "Type in the vaccine's name", @class = "form-control" })
    @Html.ValidationMessageFor(v => v.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Price", "Price:")
    <br />
    @Html.TextBoxFor(v => v.Price, null, new { placeholder = "Type in the vaccine's price", @class = "form-control" })
    @Html.ValidationMessageFor(v => v.Price, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-primary" type="submit">Create</button>


}
